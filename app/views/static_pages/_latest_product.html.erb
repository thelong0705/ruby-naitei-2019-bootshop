<div class="thumbnail">
  <a href="product_details.html">
    <%= image_tag product.image.url %>
  </a>
  <div class="caption">
    <h5><%= product.name %></h5>
    <p>
      Some description
    </p>
    <h4 style="text-align:center">
      <%= link_to fa_icon("search-plus"), product, class: "btn" %>
      <a class="btn" href="#">Add to <%= fa_icon "shopping-cart" %></i></a>
      <a class="btn btn-primary" href="#">
        $<%= product.price %>
      </a>
    </h4>
  </div>
</div>
